datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Quiz {
  id        Int       @id @default(autoincrement())
  title     String
  questions Question[]
}

model Question {
  id            Int     @id @default(autoincrement())
  questionText  String
  type          String
  options       String?
  correctAnswer String?
  quizId        Int
  quiz          Quiz       @relation(fields: [quizId], references: [id])
}
